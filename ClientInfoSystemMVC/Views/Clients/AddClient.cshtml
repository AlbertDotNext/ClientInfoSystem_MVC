@model ApplicationCore.Models.ClientRequestModel

@{
    ViewData["Title"] = "Add Client";
}

<div class="container-fluid">
    <h1>Add Client</h1>
    <form asp-action="AddClient">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input type="text" class="form-control" asp-for="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email">Email address</label>
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" asp-for="Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Phones">Phones</label>
            <input type="tel" class="form-control" asp-for="Phones" placeholder="123-456-7890">
            <span asp-validation-for="Phones" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address">Address</label>
            <input type="text" class="form-control" asp-for="Address">
        </div>
        <div class="form-group">
            <label asp-for="AddedOn">AddedOn</label>
            <input type="date" class="form-control" asp-for="AddedOn">
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
        <a type="button" class="btn btn-success ml-2" asp-controller="Clients" asp-action="ClientList">Back</a>
    </form>
</div>