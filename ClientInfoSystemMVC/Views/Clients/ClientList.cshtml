@model List<ApplicationCore.Models.ClientResponseModel>
@{
    ViewData["Title"] = "Client Page";
}


<div class="container-fluid">
    <h1>Clients Information</h1>
    <div class="d-flex justify-content-between" >
        <div class="mt-2 mb-2">
            <a class="btn btn-success " asp-controller="Clients" asp-action="AddClient">Create Client</a>
        </div>
        <div>
            
            <form class="form-inline" asp-action="GetClientByEmail">
                <input class="form-control mr-sm-2" type="search" placeholder="Search Client By Email" aria-label="Search" name="email">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
        
            
        
    </div>
    
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">ClientID</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Phones</th>
                <th scope="col">Address</th>
                <th scope="col">AddedOn</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var client in Model)
            {
            <tr>
                <td>@client.Id</td>
                <th scope="row"><a asp-controller="Interactions" asp-action="InteractionWithClient" asp-route-id="@client.Id">@client.Name</a></th>
                <td>@client.Email</td>
                <td>@client.Phones</td>
                <td>@client.Address</td>
                <td>@client.AddedOn.Value.ToShortDateString()</td>
                <td><a class="btn btn-primary" asp-controller="Clients" asp-action="UpdateClient" asp-route-id="@client.Id">Modify</a></td>
                <td><a class="btn btn-danger " asp-controller="Clients" asp-action="DeleteClient" asp-route-id="@client.Id" onclick="return confirm('Are you sure to delete @client.Name?')">Delete</a></td>
            </tr>
                
            }


        </tbody>
    </table>


</div>
