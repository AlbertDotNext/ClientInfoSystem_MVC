@model List<ApplicationCore.Models.ClientResponseModel>
@{
    ViewData["Title"] = "Client Page";
}


<div class="container-fluid">
    <h1>Clients Information</h1>
    <a class="btn btn-success mt-2 mb-2" asp-controller="Clients" asp-action="AddClient">Create Client</a>
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Phones</th>
                <th scope="col">Address</th>
                <th scope="col">AddedOn</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var client in Model)
            {
            <tr>
                <th scope="row"><a asp-controller="Interactions" asp-action="InteractionWithClient" asp-route-id="@client.Id">@client.Name</a></th>
                <td>@client.Email</td>
                <td>@client.Phones</td>
                <td>@client.Address</td>
                <td>@client.AddedOn.Value.ToShortDateString()</td>
                <td><a class="btn btn-primary" asp-controller="Clients" asp-action="UpdateClient" asp-route-id="@client.Id">Modify</a></td>
                <td><a class="btn btn-danger" asp-controller="Clients" asp-action="DeleteClient" asp-route-id="@client.Id">Delete</a></td>
            </tr>
                
            }


        </tbody>
    </table>
</div>
