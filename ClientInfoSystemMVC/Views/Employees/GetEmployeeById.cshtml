@model ApplicationCore.Models.EmpInfoResponseModel
@{
    ViewData["Title"] = "Employee detail";
}

<div class="container-fluid">
    <a class="btn btn-success mt-2 mb-2" asp-controller="Interactions" asp-action="InteractionsList">Back To List</a>
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">EmployeeID</th>
                <th scope="col">Name</th>
                <th scope="col">Designation</th>

                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Id</td>
                <th scope="row"><a asp-controller="Interactions" asp-action="InteractionWithEmployee" asp-route-id="@Model.Id">@Model.Name</a></th>
                <td>@Model.Designation</td>

                <td><a class="btn btn-primary" asp-controller="Employees" asp-action="UpdateEmployee" asp-route-id="@Model.Id">Modify</a></td>
                <td><a class="btn btn-danger" asp-controller="Employees" asp-action="DeleteEmployee" asp-route-id="@Model.Id">Delete</a></td>
            </tr>

        </tbody>
    </table>
</div>