@model ApplicationCore.Models.EmpInfoRequestModel
@{
    ViewData["Title"] = "Update Employee";
}

<div class="container-fluid">
    <h1>Modify Employee</h1>
    <form asp-action="UpdateEmployee">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input type="text" class="form-control" asp-for="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input type="password" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" asp-for="Password">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Designation">Designation</label>
            <input type="text" class="form-control" asp-for="Designation">

        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a type="button" class="btn btn-success ml-2" asp-controller="Employees" asp-action="EmployeeList">Back</a>
    </form>
</div>