@model List<ApplicationCore.Models.InteractionResponseModel>
@{
    ViewData["Title"] = "Interactions Page";
}

<div class="container-fluid">
    <h1>Interactions Information</h1>
    <a class="btn btn-success mt-2 mb-2" asp-controller="Interactions" asp-action="AddInteraction">Create Interaction</a>
    <table class="table table-dark overflow-auto">
        <thead>
            <tr>
                <th scope="col">ClientName</th>
                <th scope="col">EmployeeName</th>
                <th scope="col">InteractionType</th>
                <th scope="col">InteractionDate</th>
                <th scope="col">Remarks</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var interaction in Model)
            {
                <tr>
                    <th scope="row"><a asp-controller="Clients" asp-action="GetClientById" asp-route-id="@interaction.ClientId">@interaction.ClientName</a></th>
                    <td><a asp-controller="Employees" asp-action="GetEmployeeById" asp-route-id="@interaction.EmpId">@interaction.EmployeeName</a></td>
                    <td>@interaction.IntType</td>
                    <td>@interaction.IntDate.Value.ToShortDateString()</td>
                    <td>@interaction.Remarks</td>
                    <td><a class="btn btn-primary" asp-controller="Interactions" asp-action="UpdateInteraction" asp-route-id="@interaction.Id">Modify</a></td>
                    <td><a class="btn btn-danger" asp-controller="Interactions" asp-action="DeleteInteraction" asp-route-id="@interaction.Id" onclick="return confirm('Are you sure to delete?')">Delete</a></td>
                </tr>

            }


        </tbody>
    </table>
</div>
